@model IEnumerable<PatientMgmtProject.Models.DoctorModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
<div class="table-responsive">
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(model => item.DocId)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DocName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DocId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DocId })
            </td>
        </tr>
    }

</table>
    </div>

<p>@Html.ActionLink("Show Active Dctors", "ActiveDoctors")</p>